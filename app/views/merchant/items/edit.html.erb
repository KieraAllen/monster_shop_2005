
<%= content_tag :h1, "Edit #{@item.name}" %>

<%= form_tag "/merchant/items/#{@item.id}/edit", method: :patch do %>
  <%= label_tag(:name, "Name") %>
  <%= text_field_tag(:name, value = @item.name) %>
  <%= label_tag(:description, "Description") %>
  <%= text_field_tag(:description, value = @item.description) %>
  <%= label_tag(:image, "Image") %>
  <%= text_field_tag(:image, value = @item.image) %>
  <%= label_tag(:price, "Price") %>
  <%= text_field_tag(:price, value = @item.price) %>
  <%= label_tag(:inventory, "Inventory") %>
  <%= text_field_tag(:inventory, value = @item.inventory) %>
  <%= submit_tag 'Submit' %>
<% end %>
