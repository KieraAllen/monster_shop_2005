<%= content_tag :h1, "Create New Item" %>

<center>
  <%= form_tag '/merchant/items', method: :post do |f| %>
    <%= label_tag :name %>
    <%= text_field_tag :name, @item.name %>

    <%= label_tag :description %>
    <%= text_field_tag :description, @item.description %>

    <%= label_tag :image %>
    <%= text_field_tag :image, @item.image %>

    <%= label_tag :price %>
    <%= number_field_tag :price, @item.price, min: 1 %>

    <%= label_tag :inventory %>
    <%= number_field_tag :inventory, @item.inventory, min: 0 %>

    <%= submit_tag 'Create Item' %>
  <% end %>
</center>
