<%= content_tag :h1, "Create New Item" %>

<center>
  <%= form_tag '/merchant/items', method: :post do |f| %>

    <%= label_tag :name %>
    <%= text_field_tag :name %>

    <%= label_tag :description %>
    <%= text_field_tag :description %>

    <%= label_tag :image %>
    <%= text_field_tag :image %>

    <%= label_tag :price %>
    <%= number_field_tag :price %>

    <%= label_tag :inventory %>
    <%= number_field_tag :inventory %>

    <%= submit_tag 'Create Item' %>
  <% end %>
</center>
