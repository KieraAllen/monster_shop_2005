<%= content_tag :h1, "Orders" %>

<% @orders.each do |order| %>
  <body class="order-body">
    <%= content_tag :h3, "Order Number: #{order.id}" %>
    <%= content_tag :p, "Status: #{order.status}"%>
    <%= content_tag :p, "Date created: #{order.created_at}" %>
    <%= content_tag :p, "Last updated: #{order.updated_at}" %>
    <%= content_tag :p, "Total Items in Order: #{order.item_orders.count}" %>
    <%= content_tag :p, "Order Total: $#{(order.grandtotal)}" %>
  </body>
<% end %>
